<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:layout_height="wrap_content">
<TextView
    android:id="@+id/place"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="match_parent"
    android:layout_height="70dp"/>
    <ImageView
        app:layout_constraintBottom_toBottomOf="@+id/place"
        app:layout_constraintTop_toTopOf="@+id/place"
        app:layout_constraintStart_toStartOf="@+id/place"
        android:id="@+id/woman"
        tools:src="@drawable/ic_woman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/place"
        app:layout_constraintTop_toTopOf="@+id/place"
        app:layout_constraintStart_toEndOf="@+id/woman"
        android:id="@+id/liked_photo"
        tools:src="@drawable/ic_liked_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/place"
        app:layout_constraintTop_toTopOf="@+id/place"
        app:layout_constraintStart_toEndOf="@+id/liked_photo"
        android:id="@+id/rectangle_heart"
        tools:src="@drawable/ic__rectangle_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>